# Flask Backend Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
PORT=5000

# Database
DATABASE_URL=sqlite:///newskoo_dev.db
# Production example: postgresql://user:password@localhost:5432/newskoo

# CORS
FRONTEND_URL=http://localhost:5173

# Reddit API (Optional - for metadata crawling only)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=NewsKoo/1.0

# LLM Configuration
LLM_MODEL_NAME=yanolja/EEVE-Korean-10.8B-v1.0
LLM_DEVICE=cuda
LLM_MAX_LENGTH=2048

# File Upload
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
