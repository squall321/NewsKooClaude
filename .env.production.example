# Production Environment Variables
# Copy this file to .env.production and fill in the values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-this
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this

# Database Configuration
POSTGRES_DB=newskoo
POSTGRES_USER=newskoo
POSTGRES_PASSWORD=your-strong-password-here
DATABASE_URL=postgresql://newskoo:your-strong-password-here@postgres:5432/newskoo

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Frontend Configuration
VITE_API_URL=https://newskoo.com

# CORS Origins
CORS_ORIGINS=https://newskoo.com,https://www.newskoo.com

# Reddit API (for crawling)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=NewsKoo/1.0

# LLM Configuration
LLM_MODEL_NAME=yanolja/EEVE-Korean-Instruct-10.8B-v1.0
LLM_MODEL_PATH=/app/models
LLM_DEVICE=cuda
LLM_MAX_LENGTH=2048
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9
LLM_USE_INT8=true

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@newskoo.com

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google AdSense
ADSENSE_CLIENT_ID=ca-pub-XXXXXXXXXXXXXXXX

# Image Storage Configuration
# Storage backend: 'local', 's3', 'r2'
IMAGE_STORAGE_BACKEND=local

# Local Storage (default)
LOCAL_UPLOAD_DIR=/app/uploads
LOCAL_BASE_URL=/uploads

# AWS S3 Storage (if using S3 backend)
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_CDN_URL=https://cdn.newskoo.com

# CloudFlare R2 Storage (if using R2 backend)
# S3_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
# S3_CDN_URL=https://your-custom-domain.com

# Image Optimization
MAX_IMAGE_SIZE=5242880  # 5MB in bytes
JPEG_QUALITY=85
WEBP_QUALITY=85
